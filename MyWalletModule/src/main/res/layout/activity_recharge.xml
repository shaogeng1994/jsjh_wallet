<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/x40">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:text="选择支付方式"
            android:textSize="@dimen/middle_text_size"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            android:textColor="@color/colorGrayFont"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_marginTop="@dimen/x1"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_marginLeft="@dimen/x10"
                        android:background="@mipmap/bank_quick_pay"/>
                    <TextView
                        android:layout_width="@dimen/x200"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x10"
                        android:textColor="@color/colorBlackText"
                        android:text="快捷支付"
                        android:textSize="@dimen/big_text_size"
                        android:gravity="center_vertical"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_marginTop="@dimen/x1"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_marginLeft="@dimen/x10"
                        android:background="@mipmap/bank_deposit_card"/>
                    <TextView
                        android:layout_width="@dimen/x200"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x10"
                        android:textColor="@color/colorBlackText"
                        android:text="储蓄卡支付"
                        android:textSize="@dimen/big_text_size"
                        android:gravity="center_vertical"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_marginTop="@dimen/x1"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_marginLeft="@dimen/x10"
                        android:background="@mipmap/bank_credit_card"/>
                    <TextView
                        android:layout_width="@dimen/x200"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x10"
                        android:textColor="@color/colorBlackText"
                        android:text="信用卡支付"
                        android:textSize="@dimen/big_text_size"
                        android:gravity="center_vertical"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/x50"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">
                    <RadioButton
                        android:id="@+id/recharge_radio1"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_marginTop="@dimen/x10"
                        android:layout_marginBottom="@dimen/x11"
                        android:background="@drawable/checkbox_style"
                        android:button="@null"
                        android:visibility="gone"/>
                    <RadioButton
                        android:id="@+id/recharge_radio2"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_marginTop="@dimen/x10"
                        android:layout_marginBottom="@dimen/x11"
                        android:background="@drawable/checkbox_style"
                        android:button="@null" />
                    <RadioButton
                        android:id="@+id/recharge_radio3"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_marginTop="@dimen/x10"
                        android:layout_marginBottom="@dimen/x11"
                        android:background="@drawable/checkbox_style"
                        android:button="@null"
                        android:visibility="gone"/>
                </RadioGroup>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="@color/colorWhite"
            android:layout_marginTop="@dimen/x10"
            android:text="充值金额"
            android:textSize="@dimen/big_text_size"
            android:paddingLeft="@dimen/x10"
            android:gravity="center_vertical"
            android:textColor="@color/colorGrayFont"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x1"
            android:background="#fff">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="￥"
                android:gravity="center"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/large_text_size"/>
            <EditText
                android:id="@+id/recharge_amount"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入金额"
                android:gravity="center_vertical"
                android:textSize="@dimen/large_text_size"
                android:textColorHint="@color/colorHintText"
                android:inputType="numberDecimal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x28"
            android:layout_marginTop="@dimen/x1"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x10"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrayFont"
                android:textSize="@dimen/middle_text_size"
                android:text="可用余额"/>
            <TextView
                android:id="@+id/recharge_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrayFont"
                android:textSize="@dimen/middle_text_size" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/recharge_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:text="下一步"
        android:textColor="@color/colorBlackText"
        android:gravity="center"
        android:textSize="@dimen/big_text_size"
        android:layout_marginTop="@dimen/x20"/>

</RelativeLayout>