<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x157"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/colorWhite">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30"
            android:src="@mipmap/recharge_time"/>
        <TextView
            android:id="@+id/recharge_success_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:textSize="@dimen/big_text_size"
            android:textColor="#3c86ba"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x18"
        android:paddingRight="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        android:background="@color/colorWhite">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/big_text_size"
            android:textColor="@color/colorGrayFont"
            android:text="银行卡"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/recharge_success_cardname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/big_text_size"
                android:layout_marginRight="@dimen/x10"/>
            <TextView
                android:id="@+id/recharge_success_cardend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/big_text_size"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x1"
        android:paddingRight="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        android:background="@color/colorWhite">
        <TextView
            android:id="@+id/recharge_success_amount_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/big_text_size"
            android:textColor="@color/colorGrayFont"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/recharge_success_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/big_text_size"/>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/recharge_success_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:background="@drawable/shape_corner_btn_red"
        android:text="完成"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/big_text_size"/>
</LinearLayout>