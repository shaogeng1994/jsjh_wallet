<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray">
    <com.flipboard.bottomsheet.BottomSheetLayout
        android:id="@+id/pay_online_bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x10"
                    android:gravity="center_vertical"
                    android:text="订单号："
                    android:textColor="@color/colorBlackText"
                    android:textSize="@dimen/big_text_size"/>
                <TextView
                    android:id="@+id/pay_online_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlackText"
                    android:textSize="@dimen/big_text_size"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x10"
                    android:gravity="bottom"
                    android:paddingBottom="@dimen/x5"
                    android:text="订单金额："
                    android:textColor="@color/colorBlackText"
                    android:textSize="@dimen/big_text_size"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/colorAccent"
                    android:text="￥"
                    android:paddingBottom="@dimen/x5"/>
                <TextView
                    android:id="@+id/pay_online_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pay_online_bankpay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x53"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/x1"
                android:visibility="gone">
                <LinearLayout
                    android:id="@+id/pay_online_selectbank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/x1"
                    android:background="#fff"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:id="@+id/pay_online_bankimg"
                                android:layout_width="@dimen/x30"
                                android:layout_height="@dimen/x30"
                                android:layout_marginLeft="@dimen/x10"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/pay_online_bankname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/x10"
                                    android:textColor="@color/colorBlackText"
                                    android:textSize="@dimen/big_text_size" />
                                <TextView
                                    android:id="@+id/pay_online_banktype"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/x10"
                                    android:textColor="@color/colorGrayFont"
                                    android:textSize="@dimen/middle_text_size"
                                    android:layout_marginTop="@dimen/x5"/>
                            </LinearLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="@dimen/x16"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/x10"
                            android:gravity="center_vertical"
                            android:layout_alignParentRight="true">
                            <ImageView
                                android:layout_width="@dimen/x8"
                                android:layout_height="@dimen/x16"
                                android:background="@mipmap/icon_go" />
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pay_online_balancelayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x1"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x20"
                    android:gravity="center_vertical"
                    android:text="账户余额："
                    android:textColor="#000"
                    android:textSize="@dimen/middle_text_size"/>
                <TextView
                    android:id="@+id/pay_online_balance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#f00"
                    android:textSize="@dimen/middle_text_size"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pay_online_phonelayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x10"
                    android:gravity="center_vertical"
                    android:text="手机号码："
                    android:textColor="@color/colorGrayFont"
                    android:textSize="@dimen/big_text_size"/>
                <TextView
                    android:id="@+id/pay_online_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorGrayFont"
                    android:textSize="@dimen/big_text_size"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/pay_online_codelayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x10"
                android:visibility="gone">
                <EditText
                    android:id="@+id/pay_online_code"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:paddingLeft="@dimen/x10"
                    android:hint="验证码"
                    android:textSize="@dimen/big_text_size"
                    android:textColorHint="@color/colorHintText"
                    android:inputType="text"/>
                <TextView
                    android:id="@+id/pay_online_getcode"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_height="@dimen/x25"
                    android:gravity="center"
                    android:background="@drawable/shape_corner_btn_red"
                    android:textColor="#fff"
                    android:textSize="@dimen/middle_text_size"
                    android:text="获取验证码"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/pay_online_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="@drawable/shape_corner_btn_red"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x20"
                android:text="立即支付"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="@dimen/big_text_size"/>
        </LinearLayout>
    </com.flipboard.bottomsheet.BottomSheetLayout>
</LinearLayout>